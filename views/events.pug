extends layout

block content
    div.container
      if events.length
          p.summary Here are the <strong>#{events.length}</strong> events we've found:
          div.events
            each event in events
              div.event
                h4
                  <strong>#{event.type} </strong>
                  a(href=event.link) #{event.name} 
                p.date #{event.time} / 
      else
          p There's no events :(
    script.
        console.log(!{JSON.stringify(events)})
